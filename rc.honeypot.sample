#
#	maxthreads	=> 100,

# maximum number of commands per client
# [optional] default 100
#
#	maxcmds		=> 100,

# disconnect the remote after this much time
# [optional] default 300 seconds
#
#	disconnect	=> 300,

};

no warnings;

run_honeypot($config);
